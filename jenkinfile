pipeline {
    agent any

    stages {

        stage('Clone Code') {
            steps {
                echo "Pulling code from GitHub..."
                git branch: 'master', url: 'https://github.com/pikachu781/project1.git'
            }
        }

        stage('Build') {
            steps {
                echo "Building application..."
                sh 'echo Build step running...'
                // Example: sh 'npm install'  (for Node)
                // Example: sh 'mvn clean package' (for Java)
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'echo No tests configured' 
                // Example: sh 'npm test'
                // Example: sh 'mvn test'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Creating Docker image..."
                script {
                    dockerImage = docker.build("myapp:latest")
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying using Docker..."
                script {
                    sh "docker rm -f myapp || true"
                    sh "docker run -d --name myapp -p 80:80 myapp:latest"
                }
            }
        }
    }
}
